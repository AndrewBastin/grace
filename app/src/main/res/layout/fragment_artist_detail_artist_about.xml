<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".fragments.AlbumDetailAlbumInfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        >
        <RelativeLayout
            android:id="@+id/artistDetailArtistInfoBioLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            >

            <TextView
                android:id="@+id/artistDetailArtistInfoBioHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="ABOUT"
                android:textColor="@color/colorAccent"
                android:tag="text_color|accent_color"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/artistDetailArtistInfoBioText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_below="@id/artistDetailArtistInfoBioHeading"
                />

        </RelativeLayout>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
